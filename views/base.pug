doctype html
html(lang='en')
  block head
    head
      meta(charset='UTF-8')
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      link(
        rel='stylesheet',
        href='https://fonts.googleapis.com/css?family=Lato:300,300i,700'
      )
      link(rel='stylesheet', href='/css/style.css')
      link(rel='shortcut icon', href='/img/favicon.png', type='image/x-icon')
      title Natours | #{ title }

      script(src='https://js.stripe.com/v3/', crossorigin='anonymous')
      script(defer, type='module', src='/Js/bundle/index.js')
      //- script(defer, type='module', src='/Js/index.js')

  body
    include _header
    block content

    include _footer
